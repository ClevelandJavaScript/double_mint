<h2>Transactions</h2>

<div class="transactions">
  <table>
    <thead>
      <tr>
        <td class="transactions-date">Date</td>
        <td class="transactions-description">Description</td>
        <td class="transactions-category">Category</td>
        <td class="transactions-amount">Amount</td>
      </tr>
    </thead>
    <tbody>
      {{#each}}
        <tr {{action startEditing controller}}>
          <td>{{format-simple-date date}}</td>
          <td>
          {{#if isEditing}}
            {{input value=description}}
          {{else}}
            {{description}}
          {{/if}}
          </td>
          <td></td>
          <td>{{format-money amount}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{ outlet }}
